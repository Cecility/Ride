<!-- THIS IS ALSO THE MY GROUPS PAGE! -->

<body>
<div class="container">
    <div class="row profile">
		<div class="col-md-3">
			<div class="profile-sidebar">
				<!-- SIDEBAR USERPIC -->
				<div class="profile-userpic">
					<img src="<%= userprofile.users[0].pic %>" class="img-responsive">
				</div>
				<!-- END SIDEBAR USERPIC -->

				<!-- SIDEBAR USER TITLE -->
				<div class="profile-usertitle">
					<div class="profile-usertitle-name">
						<%= userprofile.users[0].username %>
					</div>
				</div>
				<!-- END SIDEBAR USER TITLE -->

				<!-- SIDEBAR BUTTONS -->
				<div class="profile-userbuttons">
					<button type="button" class="btn btn-danger btn-sm">Logout</button>
				</div>
				<!-- END SIDEBAR BUTTONS -->

				<!-- SIDEBAR MENU -->
				<div class="profile-usermenu">
					<ul class="nav">
						<li>
							<a href="main"><span class="glyphicon glyphicon-user"></span>My Groups</a>
						</li>
						<li class="active">
							<a href="discovery"><span class="glyphicon glyphicon-globe"></span>Discovery</a>
						</li>
						<li>
							<a href="settings"><span class="glyphicon glyphicon-cog"></span>Settings</a>
						</li>
					</ul>
				</div>
				<!-- END MENU -->
			</div>
		</div>


		<!-- MAIN CONTENT -->
		<div class="col-md-9">
            <div class="profile-content">
            	<h1 align="center"> Sign up for rides! </h1>
    	        <% for(var i = 0; i < userprofile.drives.length; i++ ){ %>
                
                
                <div id="discover-post-container">  
                    
					<div class="profile-userpic">
						<% for(var k = 0; k < userprofile.users.length; k++){
							if(userprofile.drives[i].email == userprofile.users[k].email){ %>				
								<img src="<%= userprofile.users[k].pic %>" class="img-responsive">		
						<% }} %>
					</div>
					<div class="profile-usertitle">
						<div class="profile-usertitle-name">
							<%= userprofile.drives[i].username %>
						</div>
					</div>
        	       	<li> Leaving at: <%= userprofile.drives[i].time %> </li>
        	       	<li> Pick Up: <%= userprofile.drives[i].pickup %> </li>
        	       	<li> Drop Off: <%= userprofile.drives[i].dropoff %> </li>
        	     	<li> Rides on: 
        	        	<% if(userprofile.drives[i].dates[0] == 1){ %>
        	        		Mon, 
        	        	<% } %>

        	        	<% if(userprofile.drives[i].dates[1] == 1){ %>
        	        		Tue, 
        	        	<% } %>

        	        	<% if(userprofile.drives[i].dates[2] == 1){ %>
        	        		Wed, 
        	        	<% } %>

        	        	<% if(userprofile.drives[i].dates[3] == 1){ %>
        	        		Thu, 
        	        	<% } %>

        	        	<% if(userprofile.drives[i].dates[4] == 1){ %>
        	        		Fri, 
        	        	<% } %>

        	        	<% if(userprofile.drives[i].dates[5] == 1){ %>
        	        		Sat, 
        	        	<% } %>

        	        	<% if(userprofile.drives[i].dates[6] == 1){ %>
        	        		Sun
        	        	<% } %>
        	        </li>

        	        <li> Drive ID: <%= userprofile.drives[i].driveid %></li>
                    
                    <form action="/discovery/joinGroup" method="post">
                        <lable>
                            <input type="text" id="groupId-form" name="groupId" value="<%=userprofile.drives[i].driveid%>">
                        </lable>
                        
                        <div class="col-md-4 text-center" id="join-btn-container">
                            <input type="submit" id="join-btn" class="btn btn-success" value="Join Group">
                        </div>
                    </form>
                </div>
                <hr>
        	    <% } %>
                

            </div>
		</div>
        
        <!-- Floating input field for user to join ride group-->
        <div class="follow-scroll" id="follow-scroll">
            <label>
                <input type="id" placeholder="Join group - Driver ID" name="driverid-input">
            </label>
            
            <label>
                <button type="button" class="btn btn-success">+</button>
            </label>
        </div>
        
        
	</div>
</div>

</body>
    
    <script>
    window.onload = function() {
    $('.btn-success').on('click',function(){
        window.location.href = "http://rideordrive.herokuapp.com/mainA";
    });

  function getScrollTop() {
    if (typeof window.pageYOffset !== 'undefined' ) {
      // Most browsers
      return window.pageYOffset;
    }

    var d = document.documentElement;
    if (d.clientHeight) {
      // IE in standards mode
      return d.scrollTop;
    }

    // IE in quirks mode
    return document.body.scrollTop;
  }

  window.onscroll = function() {
    var box = document.getElementById('follow-scroll'),
        scroll = getScrollTop();

    if (scroll <= 28) {
      box.style.bottom = "30px";
    }
    else {
      box.style.bottom = (-scroll + 50) + "px";
    }
  };

};
    </script>

</html>